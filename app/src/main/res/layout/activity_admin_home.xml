<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADMIN HOME"
            android:textSize="20dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textAlignment="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/Addbook"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/loginthemes"
            android:gravity="center"
            android:padding="10dp"
            android:text="ADD BOOK"
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/Viewbook"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/loginthemes"
            android:gravity="center"
            android:padding="10dp"
            android:text="VIEW BOOKS"
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="20dp" />
        <TextView
            android:id="@+id/issuedbook"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/loginthemes"
            android:gravity="center"
            android:padding="10dp"
            android:text="ISSUE BOOK"
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="20dp" />
        <TextView
            android:id="@+id/issuedbooks"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/loginthemes"
            android:gravity="center"
            android:padding="10dp"
            android:text="ISSUED BOOKS"
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="20dp" />
        <TextView
            android:id="@+id/Adminlogout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/loginthemes"
            android:gravity="center"
            android:padding="10dp"
            android:text="LOGOUT "
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>